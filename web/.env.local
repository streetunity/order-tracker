# API Configuration
NEXT_PUBLIC_API_BASE=http://localhost:4000
NEXT_PUBLIC_ADMIN_KEY=dev-admin-key

# Optional: If you have different environments
# NEXT_PUBLIC_API_BASE=https://api.yourdomain.com  # For production
# NEXT_PUBLIC_ADMIN_KEY=your-secure-production-key  # For production

# Backend/Server-side only variables (not accessible in browser)
ADMIN_KEY=dev-admin-key
DATABASE_URL=your-database-connection-string-here

# Optional: Other common environment variables
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Manufacturing Tracker
NEXT_PUBLIC_REFRESH_INTERVAL=30000  # 30 seconds in milliseconds

# Optional: Feature flags
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_SHOW_ITEM_COUNTS=true

# Optional: Styling/Branding
NEXT_PUBLIC_PRIMARY_COLOR=#2563eb
NEXT_PUBLIC_DANGER_COLOR=#dc2626

# Optional: If using authentication service
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-nextauth-secret-here

# Optional: If using external services
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-specific-password